@model MCM.Models.ReferModel
@{
    ViewBag.Title = "Refer";
    Html.EnableClientValidation(true);
    Html.EnableUnobtrusiveJavaScript(true);
}


<h1>Refer a Friend</h1>

<p>
    Please enter the email address of someone who may also be interested in our services.
    We appreciate your confidence in us and thank you for your referral.
</p>

<div style="clear: both">

    @Html.ValidationSummary(true, "A few fields are still empty")
    @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "Post", OnComplete = "Refer.onComplete" }))
    {
        <div class="contactForm">
            <p>
                <span class="editor-label">
                    @Html.LabelFor(m => m.FromName)
                </span><span class="editor-field">
                    @Html.TextBoxFor(m => m.FromName)
                    @Html.ValidationMessageFor(m => m.FromName)
                </span>
            </p>
            <p>
                <span class="editor-label">
                    @Html.LabelFor(m => m.ToName)
                </span><span class="editor-field">
                    @Html.TextBoxFor(m => m.ToName)
                    @Html.ValidationMessageFor(m => m.ToName)
                </span>
            </p>
            <p>
                <span class="editor-label">
                    @Html.LabelFor(m => m.ToEmail)
                </span><span class="editor-field">
                    @Html.TextBoxFor(m => m.ToEmail, new { style="width: 400px" })
                    @Html.ValidationMessageFor(m => m.ToEmail)
                </span>
            </p>
            <p>
                <span class="editor-label">@Html.Label(" ")</span>
                <span class="editor-field">
                    <input type="submit" value="Send Email" />
                </span>
            </p>
        </div>
        <fieldset>
            <legend>Sample</legend>
            <div>
                <span id="referSample">
                    @Html.Raw(Model.Body)
                </span>
            </div>
        </fieldset>

    }
</div>
<div id="dialog"></div>
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryui")

<script type="text/javascript">
    var Refer = {
        onComplete: function (content) {

            var result = $.parseJSON(content.responseText);

            if (result.success) {
                $("#ToEmail").val('');
                $("#FromName").val('');
                $("#ToName").val('');
            }

            $("#dialog").html(result.message);
            $("#dialog").dialog('open');

        }
    };

    $(document).ready(function () {
        $("#dialog").dialog({
            autoOpen: false,
            buttons: {
                "Ok": function () {
                    $(this).dialog('close');
                }
            }
        });
    });
</script>

